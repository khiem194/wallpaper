<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context=".ui.home.HomeActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.45"
            android:text="@string/nature"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:foreground="?selectableItemBackground"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_bg_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_trending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bg_category"
            android:text="@string/trending"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.45" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_photos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.473"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.473"
            app:layout_constraintTop_toBottomOf="@id/btn_nature"
            tools:listitem="@layout/item_wallpaper" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
